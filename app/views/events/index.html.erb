
    <!-- Page Content -->
    <div class="container">

        <!-- <div class="row"> -->

            <div class="col-lg-12 text-center">
                <h1 class="page-header">Sport Feed</h1>
                <%= link_to(new_event_path) do %><button type="button" class="btn btn-primary">CREATE NEW EVENT</button><% end %>
                <hr>
            </div>
                <div class="sidebar feed col-md-2">
                  <ul class="vert-one">
                    <%= image_tag("user.jpg", :alt => "User", :class => "img-responsive img-circle") %>
                    <p style="color:white; text-align:center;"><%= current_user.email %></p>
                    <li><%= link_to('SportsFeed', events_path, :class => "current", :title => "CSS Menus") %></li>
                    <li><%= link_to('Preferences', user_preferences_path, :title => "CSS Menus") %></li>
                    <li><%= link_to('Logout', destroy_user_session_path, :method => :delete, :title => "CSS Menus") %></li>
                  </ul>
                  <button type="button" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-search"></span> Search</button>
                </div><!--End of sidebar-->

                <div class="row col-md-10">
                  <% @events.each do |event| %>
                    <%= link_to(event) do %>
                      <div class="col-md-4 thumb">
                          <div class="thumbnail image">
                              <img class="img-responsive icon effect" src="<%= event.image_url %>">
                              <h2><span><%= event.headline %></span></h2>
                              <h3 class="sport-label"><span class="marker-bg"></span></h3>
                          </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
          <!-- </div> -->
        <hr>
    </div>
