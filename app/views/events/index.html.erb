<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table style="table">
  <thead>
    <tr>
      <th>Headline</th>
      <th>Description</th>
      <th>Lat</th>
      <th>Lng</th>
      <th>Address</th>
      <th>Datetime</th>
      <th>Type</th>
      <th>Max seats</th>
      <th>Skill min</th>
      <th>Skill max</th>
      <th>Image</th>
      <th>Sport</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.headline %></td>
        <td><%= event.description %></td>
        <td><%= event.lat %></td>
        <td><%= event.lng %></td>
        <td><%= event.address %></td>
        <td><%= event.datetime %></td>
        <td><%= event.type %></td>
        <td><%= event.max_seats %></td>
        <td><%= event.skill_min %></td>
        <td><%= event.skill_max %></td>
        <td><%= event.image %></td>
        <td><%= event.sport %></td>
        <td><%= event.user %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

