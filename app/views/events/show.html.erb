<div class="sidebar">
  <ul class="vert-one">
    <%= image_tag("user.jpg", :alt => "User", :class => "img-responsive img-circle") %>
    <p style="color:white; text-align:center;"><%= current_user.email %></p>
    <li><%= link_to('SportsFeed', events_path, :class => "current", :title => "CSS Menus") %></li>
    <li><%= link_to('Preferences', user_preferences_path, :title => "CSS Menus") %></li>
    <li><%= link_to('Logout', destroy_user_session_path, :method => :delete, :title => "CSS Menus") %></li>
  </ul>
  <button type="button" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-search"></span> Search</button>
</div><!--End of sidebar-->

<div class="container">
  <div  id="header-color" class="jumbotron">
    <h1>SportNow</h1>
</div>

<div class="col-md-1"></div>
<div class="center-content col-md-10">
  <h1><%= @event.headline %></h1>
  <div class="panel panel-default event-info">
    <!-- Default panel contents -->
    <div class="panel-heading">
      <h2>About the Event</h2>
    </div>
    <div class="panel-body">
      <%= @event.description %>
    </div>
  </div>

  <div class="map-placeholder">
    <%= image_tag("map.png", :width => "400px") %>
  </div>

  <div class="panel panel-default attendee-info">
    <!-- Default panel contents -->
    <div class="panel-heading">
      <h3>Attendees</h3>
    </div>
    <div class="panel-body">
      <!-- Table -->
      <table class="table">
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
        </tr>
        <tr>
          <td>Peter</td>
          <td>Griffin</td>
        </tr>
        <tr>
          <td>Lois</td>
          <td>Griffin</td>
        </tr>
        <tr>
          <td>Joe</td>
          <td>Swanson</td>
        </tr>
        <tr>
          <td>Cleveland</td>
          <td>Brown</td>
        </tr>
      </table>
    </div>
  </div>

  <div class="join-event-wrapper">
    <%= link_to "Join Event", { id: @event, action: "join" }, class: "btn btn-default" %>
  </div>

  <div class="chat-here">
    <textarea class="form-control" rows="3"></textarea>
    <input type="submit" name="submit" value="Add Comment">
  </div>

</div><!--End of main content-->
<div class="col-md-1"></div>
</div>
